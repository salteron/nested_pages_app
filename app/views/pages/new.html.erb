<% provide(:title, 'Add page') %>

<div class="row">
  <div>
    <%= form_for(@page) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.hidden_field :parent_id %>
			
     	<%= f.label :name %>
     	<%= f.text_field :name %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :content %>
      <%= f.text_field :content %>

      <%= f.submit "Create"%>
    <% end %>
  </div>
</div>