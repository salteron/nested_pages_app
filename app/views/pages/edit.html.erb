<% provide(:title, 'Edit page') %>

<div id="nav">
  <%= render 'nav_menu' %>
  <%= render 'sub_tree' %>
</div>

<div id="page_full">
  <%= form_for(@page) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <%= f.hidden_field :parent_id %>
		
    <p>
      <%= f.label :title %>
      <%= f.text_field :title, size: 48 %>
    </p>

    <p><%= f.label :content %></p>
    <p><%= f.text_area :content, size: 80 %></p>

    <%= f.submit "Save"%>
  <% end %>
</div>
<div style='clear: both;'></div>
